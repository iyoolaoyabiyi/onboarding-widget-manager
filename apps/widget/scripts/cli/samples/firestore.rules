rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Tours collection - read-only for widget, write for authenticated dashboard users
    match /tours/{tourId} {
      // Widget can read tours (for loading configurations)
      allow read: if true;
      
      // Only authenticated users can create/update/delete tours (dashboard)
      allow create, update: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.owner_id;
      
      // Steps subcollection (new schema for scalability)
      match /steps/{stepId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
      
      // Legacy sessions subcollection (keep for backward compatibility)
      match /sessions/{sessionId} {
        allow read: if true;
        allow create: if true;
        allow update: if true;
        
        // Events subcollection
        match /events/{eventId} {
          allow read: if true;
          allow create: if true;
        }
      }
    }
    
    // New flat analytics collection (improved query performance)
    match /analytics/{sessionId} {
      // Widget can create and read analytics sessions
      allow read: if true;
      allow create: if true;
      allow update: if true;
      
      // Events subcollection for detailed tracking
      match /events/{eventId} {
        allow read: if true;
        allow create: if true;
      }
    }
    
    // Users collection (for dashboard authentication)
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

